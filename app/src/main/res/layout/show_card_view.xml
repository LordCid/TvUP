<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/vod_card"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:clipChildren="true"
    android:clipToPadding="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    app:cardBackgroundColor="@color/transparent"
    app:cardCornerRadius="@dimen/vod_custom_card_view_corner_radius">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/card_container"
        android:layout_width="@dimen/image_list_size"
        android:layout_height="@dimen/image_space"
        android:background="@drawable/img_placeholder">

        <TextView
            android:id="@+id/title_tv"
            style="@style/AppTextAppearance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_padding_size_small"
            android:textSize="@dimen/text_size_large"
            android:layout_marginBottom="@dimen/margin_padding_size_xxlarge"
            app:layout_constraintVertical_chainStyle="spread_inside"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:text="@string/placeholder_title"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/selector_portrait"
            android:duplicateParentState="true" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>